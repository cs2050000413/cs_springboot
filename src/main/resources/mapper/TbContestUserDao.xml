<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaishun.study.dao.TbContestUserDao">

    <select id="findByUserId" resultType="java.lang.Integer">
        select count(*) from tb_contest_user
        where user_id = #{userId}
    </select>
    <!--新增所有列-->
    <insert id="insert">
        insert into tb_contest_user(id,contest_id, user_id)
        values (#{id},#{contestId}, #{userId})
    </insert>
    <!--通过主键删除-->
    <delete id="deleteByUserId">
        delete from tb_contest_user where user_id = #{userId}
    </delete>
</mapper>